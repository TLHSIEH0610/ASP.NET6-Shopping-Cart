@using RamenKing.ViewModel;
@model LoginViewModel

@{
    ViewData["Title"] = "Log in";
}




<div class="container container-fluid">
    <div class="row align-items-center">
        <div class="col-md-8 offset-2">
            <div class="card w-75 mb-3 p-2">
                <div class="card-body">

                    <h4 class="card-title mb-3">Log in to your account</h4>

                    @if (TempData["Error"] != null)
                    {
                        <div class="col-md-12 alert alert-danger">
                            <span><b>Sorry!</b> - @TempData["Error"]</span>
                        </div>
                    }

                    <form asp-action="Login">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="mb-3">
                            <label asp-for="EmailAddress" class="control-label"></label>
                            <input asp-for="EmailAddress" class="form-control">
                            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
                            <span asp-validation-for="EmailAddress" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Password" class="control-label"></label>
                            <input asp-for="Password" class="form-control" />
                            <span asp-validation-for="Password" class="text-danger"></span>

                        </div>
                        <div class="mb-3">
                            <input class="btn btn-primary mr-3" type="submit" value="Log in" />
                            <a class="btn btn-secondary" href="/ramen/all">Cancel</a>
                        </div>


                    </form>
                </div>
            </div>
        </div>
        </div>
</div>
