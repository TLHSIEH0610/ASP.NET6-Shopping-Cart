@model IEnumerable<CartItem>;

@{
     int multi(int first, int second)
    {
        return first * second;
    }
}

<table class="table">
    <thead>
        <tr>
            <th scope="col">Product</th>
            <th scope="col">Price</th>
            <th scope="col">Quantity</th>
            <th scope="col">Total Price</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (CartItem item in Model)
        {
            <tr>
                <td>@item.RamenName</td>
                <td>@item.Price</td>
                <td>@item.Quantity</td>
                <td>@multi(item.Quantity, item.Price)</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Cart" asp-action="Add" asp-route-id="@item.RamenId" >+</a>
                    <a class="btn btn-primary" >-</a>
                </td>
            </tr>
        }


    </tbody>
</table>